@{
    ViewData["Title"] = "ساخت مخصول";
}


@model CreateViewModel
<div asp-validation-summary="ModelOnly">
</div>
<br />
<br />

<form method="post">
    <div class="row">
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" placeholder="Product name" required="required" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="row">
        <label asp-for="Color"></label>
        <input type="color" asp-for="Color" placeholder="Product color" required="required" />
        <span asp-validation-for="Color"></span>
    </div>

    <div class="row">
        <label asp-for="Model"></label>
        <input type="text" asp-for="Model" placeholder="Product color" required="required" />
        <span asp-validation-for="Color"></span>
    </div>
    <div class="row">
        <label asp-for="Code"></label>
        <input type="number" asp-for="Code" placeholder="Product color" required="required" />
        <span asp-validation-for="Code"></span>
    </div>
    <div class="row">
       
            <label asp-for="Brand"></label>
            <select  asp-for="Brand"  asp-items="@ViewBag.Brands" class="form-select mb-2 col-5"></select>
    </div>
    <div class="row">
        @foreach(var iteam in ViewBag.Feature)
        {
            <div class="row">
            <label class="col-2">@iteam.Text </label>
                <input class="col-1" type="checkbox" name="feature" value="@iteam.Value" />
            </div>
        }
      
    </div>
    <div>
        <label>Is availble : </label>
        <label >True</label>
        <input type="radio" name="isAvailable" value="true" />
        <label>False</label>
        <input type="radio" name="isAvailable" value="false" />
       
    </div>
    <button type="submit" asp-controller="Product" asp-action="Create" class="btn btn-primary">ساخت محصول</button>
</form>
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}